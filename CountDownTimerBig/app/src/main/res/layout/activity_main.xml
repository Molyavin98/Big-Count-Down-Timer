<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="200sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.158" />

        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnN1"
                    android:layout_marginStart="10dp"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="1" />

                <Button
                    android:id="@+id/btnN2"
                    android:layout_width="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="2" />

                <Button
                    android:id="@+id/btnN5"
                    android:layout_width="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="5" />

                <Button
                    android:id="@+id/btnN10"
                    android:layout_width="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="10" />

                <Button
                    android:id="@+id/btnN15"
                    android:layout_width="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="15" />

                <Button
                    android:id="@+id/btnN20"
                    android:layout_width="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="20" />

                <Button
                    android:id="@+id/btnN25"
                    android:layout_width="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="25" />

                <Button
                    android:id="@+id/btnN30"
                    android:layout_width="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="30" />

                <Button
                    android:id="@+id/btnN35"
                    android:layout_width="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="35" />

                <Button
                    android:id="@+id/btnN40"
                    android:layout_width="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="40" />

                <Button
                    android:id="@+id/btnN45"
                    android:layout_width="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="45" />

                <Button
                    android:id="@+id/btnN50"
                    android:layout_width="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="50" />

                <Button
                    android:id="@+id/btnN55"
                    android:layout_width="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="55" />

                <Button
                    android:id="@+id/btnN1hour"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="1h"
                    android:textAllCaps="false" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnStartAndPause"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.499"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTime"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/start" />

            <ImageButton
                android:id="@+id/btnStop"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/btnStartAndPause"
                app:layout_constraintStart_toEndOf="@+id/btnStartAndPause"
                app:layout_constraintTop_toTopOf="@+id/btnStartAndPause"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/close" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>